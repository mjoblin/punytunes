{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "PunyTunes"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "process": {
                "relaunch": true,
                "exit": true
            },
            "shell": {
                "all": false,
                "open": true
            },
            "http": {
                "all": true,
                "request": true,
                "scope": ["http://*", "https://*"]
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.CHANGE_THIS",
            "publisher": "CHANGE_THIS",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true,
        "windows": [
            {
                "theme": "Dark",
                "fullscreen": false,
                "resizable": false,
                "title": "PunyTunes",
                "width": 450,
                "height": 650,
                "visible": false,
                "hiddenTitle": true,
                "decorations": false,
                "focus": true,
                "transparent": true,
                "skipTaskbar": true,
                "alwaysOnTop": true
            }
        ],
        "systemTray": {
            "iconPath": "icons/icon_template.png",
            "iconAsTemplate": true,
            "menuOnLeftClick": false
        }
    }
}
